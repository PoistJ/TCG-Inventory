const { Router } = require("express");
const mtgController = require("../controllers/mtgController");

const mtgRouter = Router();

mtgRouter.get("/", mtgController.getMTG);
mtgRouter.get("/new", mtgController.createMTGGet);
mtgRouter.post("/new", mtgController.createMTGPost);
mtgRouter.get("/:id", mtgController.cardGet);
mtgRouter.get("/:id/update", mtgController.updateGet);
mtgRouter.post("/:id/update", mtgController.updatePost);
mtgRouter.post("/:id/delete", mtgController.deletePost);

module.exports = mtgRouter;
