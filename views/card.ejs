<h2><%= card.card_name %></h2>

<p><%= card.cost %></p>
<p><%= card.rarity %></p>
<p><%= card.quantity %></p>

<form method="GET" action="/MTG/<%= card.card_id %>/update">
  <button type="submit">Update</button>
</form>
<form method="POST" action="/MTG/<%= card.card_id %>/delete">
  <button
    type="submit"
    onclick="return confirm('Are you sure you want to delete this?');"
  >
    Delete
  </button>
</form>
<a href="/MTG">Back</a>
